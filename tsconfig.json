{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./lib",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declarationMap": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "src/**/*",
  ]
}